@{
    ViewBag.Title = "UploadEnrollment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="row page-title-div">
        <div class="col-md-6">
            <h2 class="title">Student Enrollment</h2>

        </div>

        <!-- /.col-md-6 text-right -->
    </div>
    <!-- /.row -->
    <div class="row breadcrumb-div">
        <div class="col-md-6">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-home"></i> Admin</a></li>
                <li> Enrollment</li>
                <li class="active">Student Enrollment</li>
            </ul>
        </div>

    </div>
    <!-- /.row -->
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h5>Fill the Student Enrollment info</h5>
                    </div>
                </div>
                <div class="panel-body">


                    @{ if (ViewBag.ck != null)
                     {
                         if (ViewBag.ck == false)
                         {
                            <div class="alert alert-danger left-icon-alert" role="alert">
                                <strong>Some problem with upload Enrollment...Check Course code and Data Connection...</strong>
                            </div>
                         }
                         else
                         {
                            <div class="alert alert-success left-icon-alert" role="alert">
                                <strong>Enrollment Information uploaded Successfully....!</strong>
                            </div>
                         }
                     }
                     if (ViewBag.Message != null)
                     {
                        <div class="alert alert-danger left-icon-alert" role="alert">
                            <strong>@ViewBag.Message</strong>
                        </div>
                     }

                    }
                    <form class="form-horizontal" method="post" enctype="multipart/form-data">


                        <div class="form-group">
                            <label for="default" class="col-sm-2 control-label">Faculty</label>
                            <div class="col-sm-10">
                                <span> @ViewBag.faculty</span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="default" class="col-sm-2 control-label">Semester</label>
                            <div class="col-sm-10">
                                <span> @ViewBag.semester Semester</span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="default" class="col-sm-2 control-label">Your Modified File</label>
                            <div class="col-sm-10">
                                <input type="file" required="required" name="postedFile" />
                            </div>
                        </div>

                        <input type="hidden" name="faculty" value="@ViewBag.faculty" />
                        <input type="hidden" name="semester" value="@ViewBag.semester" />

                        <h3><br /></h3>



                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" id="nextButton" name="submit" class="btn btn-primary">Upload</button>

                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <!-- /.col-md-12 -->
    </div>
</div>
